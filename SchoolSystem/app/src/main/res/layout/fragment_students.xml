<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schoolmanagementsystem.ui.assignments.StudentsFragment">

    <TextView
        android:id="@+id/studentsTitle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:text="Students Currently Enrolled "
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:layout_below="@+id/studentsTitle"
        android:background="@color/design_default_color_primary"
        android:padding="4dp"
        android:scrollbars="vertical" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD A STUDENT"
        android:layout_below="@+id/recyclerView"
        android:gravity="center"/>


</RelativeLayout>